{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.75);
      padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
    }
    
    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
        {%- for block in section.blocks -%}
            .flex-items:nth-child({{ forloop.index }}) {
              display: flex;
              justify-content: center;
              flex-direction: column;
              align-items: center;
              width: {{ block.settings.col_width }}%;
              padding:{{ block.settings.col_padding }}px;
              flex-basis: auto;
              align-self: auto;
              order: 0;
               background-image:url({{ block.settings.bg_image | image_url | image_url }});
              background-repeat: no-repeat;
              background-size: cover;
            }
        {%- endfor -%}
        .cs-content{
                  width:80%
        }
    }
    
    .flex-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: normal;
        align-items: normal;
        align-content: normal;
        gap:0px;
        width:100%;
    }
    
    
    
    @media screen and (max-width: 749px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
        {%- for block in section.blocks -%}
            .flex-items:nth-child({{ forloop.index }}) {
              width: {{ block.settings.col_width_mobile }}%;
              order: {{ block.settings.column_order }};
              padding:{{ block.settings.col_padding_mobile }}px;
            }
        {%- endfor -%}
        .cs-content{
          width:100%
        }
      }
    
      .section-width{
        display: flex;
        justify-content: center;
      }
    
      .inner-section-width{
        display: flex;
        justify-content: center;
        width:1300px;
      }
{%- endstyle -%}
  
<div class="color-{{ section.settings.color_scheme }} gradient section-width">
  <div class="section-{{ section.id }}-padding inner-section-width">
    <div class="flex-container">
      {%- for block in section.blocks -%}
        <div class="flex-items">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url }}" width="100%" height="300px" style="object-fit:cover;">
          {%- endif -%}
          <center class="cs-content">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }}</h2>
              {% if block.settings.sub_heading != blank %}
                <p>{{ block.settings.sub_heading }}</p>
              {%- endif -%}
            {%- endif -%}
          </center>
          {%- if block.settings.show_social -%}
            <center>
              <strong>- <small>Social Media</small> -</strong>
            </center>
            {%- render 'social-icons' -%}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "custom-card-expand-collection",
  "tag": "section",
  "class": "section",
  "settings": [

    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],"max_blocks": 12,
  "blocks": [
    {
      "type": "column",
      "name": "column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Text here!",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "sub_heading",
          "default": "Lorem ipsum dolor sit amet consectetur adipiscing elit penatibus, scelerisque tristique habitasse rhoncus mauris senectus suspendisse, consequat et ac neque justo aliquam vulputate.",
          "label": "Sub Heading"
        },
        {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
        },
        {
              "type": "image_picker",
              "id": "bg_image",
              "label": "Background Image"
        },
        {
          "type": "color",
          "id": "color_link",
          "label": "Links",
          "default": "#2980b9"
        },
        {
          "type": "header",
          "content": "Range Setings"
        },
        {
          "type": "range",
          "id": "col_width",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Column Width Value",
          "default": 25
        },
        {
          "type": "range",
          "id": "col_padding",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Collumn Padding",
          "default": 2
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "default": true,
          "label": "t:sections.footer.blocks.brand_information.settings.show_social.label",
          "info": "t:sections.footer.blocks.brand_information.settings.show_social.info"
        },
        {
          "type": "header",
          "content": "Mobile Settings"
        },
        {
          "type": "number",
          "id": "column_order",
          "default": 0,
          "label": "Column order "
        },
        {
          "type": "number",
          "id": "col_padding_mobile",
          "default": 0,
          "label": "Column Padding Mobile "
        },
        {
          "type": "range",
          "id": "col_width_mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Column Width Value",
          "default": 33
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom-card-expand-collection"
    }
  ]
}
{% endschema %}
